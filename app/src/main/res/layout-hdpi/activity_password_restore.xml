<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbcgroup.canopyverde.PasswordRestoreActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/logo_gris"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/load"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignTop="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:background="@drawable/first_field"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_marginTop="26dp"
        android:layout_alignEnd="@+id/logo" />

    <Button
        android:id="@+id/recover"
        android:text="@string/send"
        android:onClick="newPassword"
        android:background="@drawable/btn_ppal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="5dp"
        android:textColor="@android:color/white"
        android:paddingRight="5dp"
        android:textAllCaps="false"
        android:layout_marginTop="73dp"
        android:textSize="18sp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignEnd="@+id/email" />

</RelativeLayout>
