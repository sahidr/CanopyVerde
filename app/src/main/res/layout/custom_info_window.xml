<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_window"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/araguaney"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/badge"
        android:id="@+id/relativeLayout"
        android:layout_alignBottom="@+id/badge">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/profile1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@aperezm"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/snippet"
            android:layout_alignEnd="@+id/snippet" />

        <TextView
            android:id="@+id/snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="4"
            android:text="@string/snippet"
            android:textColor="#ff7f7f7f"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/pinImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ciudad_pin"
            android:layout_alignTop="@+id/sLocation"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/sLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_overlay"
            android:text="@string/s_ubication"
            android:layout_below="@+id/snippet"
            android:layout_toEndOf="@+id/pinImage" />
    </RelativeLayout>


</RelativeLayout>
