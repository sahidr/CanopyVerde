<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:background="?android:attr/selectableItemBackground"
    tools:context="com.idbcgroup.canopyverde.UserProfileReportFragment">

    <ImageView
        android:id="@+id/colorPoint"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/p_verde"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/treeTypeDisplay"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/colorPoint"
        android:layout_toEndOf="@+id/colorPoint" />

    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/ciudad_pin"
        android:layout_alignBottom="@+id/colorPoint" />

    <TextView
        android:id="@+id/locationDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/treeTypeDisplay"
        android:layout_alignBottom="@+id/treeTypeDisplay"
        android:layout_toEndOf="@+id/locationIcon" />

    <TextView
        android:id="@+id/dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/dateDisplay"
        android:background="@color/colorLine"/>

</RelativeLayout>
