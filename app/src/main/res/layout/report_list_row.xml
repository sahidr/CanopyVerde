<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="?android:attr/selectableItemBackground"
    tools:context="com.idbcgroup.canopyverde.UserProfileReportFragment">

    <ImageView
        android:id="@+id/pointStatus"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/p_verde"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/treeTypeDisplay"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:text="Araguaney"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pointStatus"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ciudad_pin"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pointStatus"
        android:layout_marginStart="120dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/locationDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:textSize="14sp"
        android:maxLines="2"
        android:text="Av. San Martin de Caracas"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/locationIcon"
        android:layout_toStartOf="@+id/date"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:id="@+id/date"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/dateDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/monthDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAR 2017"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/date"
        android:background="@color/colorLine"/>

</RelativeLayout>
