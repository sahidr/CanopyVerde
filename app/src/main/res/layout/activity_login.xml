<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbcgroup.canopyverde.LoginActivity">


    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/login"
        android:layout_below="@+id/load"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/load"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/first_edit_text"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/logo"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/last_edit_text"
        android:hint="@string/password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="232dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/signin"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAllCaps="false"
        android:textColor="@color/colorCanopyLight"
        android:layout_marginTop="20dp"
        android:onClick="login"
        android:text="@string/start_login"
        android:layout_below="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:id="@+id/rpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restore"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signin"
        android:layout_below="@+id/facebookSignIn"
        android:layout_alignEnd="@+id/signin" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookSignIn"
        android:layout_width="wrap_content"
        style="@style/FacebookLoginButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/rpwd"
        android:layout_alignStart="@+id/googleSignIn"
        android:layout_alignEnd="@+id/googleSignIn" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:onClick="register"
        android:text="@string/new_member" />


</RelativeLayout>
