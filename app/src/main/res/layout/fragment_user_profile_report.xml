<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.idbcgroup.canopyverde.UserProfileReportFragment">

    <ImageView
        android:id="@+id/colorPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_online"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/treeTypeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roble"
        android:layout_alignTop="@+id/colorPoint"
        android:layout_toEndOf="@+id/colorPoint"
        android:layout_marginStart="48dp" />

    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_search"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/treeTypeDisplay" />

    <TextView
        android:id="@+id/locationDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Av. Yaracuy"
        android:layout_alignBottom="@+id/locationIcon"
        android:layout_toEndOf="@+id/locationIcon" />

    <TextView
        android:id="@+id/dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/locationDisplay"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

</RelativeLayout>
