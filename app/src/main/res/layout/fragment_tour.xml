<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="420dp"
    android:background="@drawable/tour_card"
    tools:context="com.idbcgroup.canopyverde.TourActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/app_img"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/tour_card"
        android:cropToPadding="true" />

    <!--com.joooonho.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_img"
        app:sriv_left_top_corner_radius="5dip"
        app:sriv_right_top_corner_radius="5dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="-5dp"
        android:layout_height="250dp"
        android:layout_width="match_parent" /-->

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/lorem"
        android:textAlignment="center"
        android:layout_marginBottom="38dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/greenBar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/green_bar" />

    <TextView
        android:id="@+id/titleTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/greenBar"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginBottom="12dp"
        android:text="@string/title_tour" />

</RelativeLayout>
