<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <size android:width="300dp" />
            <solid android:color="@color/com_facebook_button_login_silver_background_color_pressed"/>
            <padding android:top="18dp" android:bottom="18dp" android:left="20dp" android:right="18dp"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:width="300dp" />
            <corners android:radius="2dp" />
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dip" android:color="@color/com_facebook_button_login_silver_background_color_pressed" />
            <padding android:top="18dp" android:bottom="18dp" android:left="20dp" android:right="18dp"/>
        </shape>
    </item>
</selector>