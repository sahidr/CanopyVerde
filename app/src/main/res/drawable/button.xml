<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <size android:width="300dp" />
            <solid android:color="@color/com_facebook_button_login_silver_background_color_pressed"/>
            <padding android:top="18dp" android:bottom="18dp" android:left="20dp" android:right="18dp"/>
            <corners android:radius="2dp" />
        </shape>

    </item>
    <item android:state_focused="true">

        <shape android:shape="rectangle"  >
            <padding android:top="20dp" android:bottom="20dp" android:left="25dp" android:right="20dp"/>
            <corners android:radius="2dp" />
            <stroke android:width="1dip" android:color="@color/colorCanopyDark" />
            <solid android:color="@color/colorCanopy"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <padding android:top="0dp" android:bottom="20dp" android:left="25dp" android:right="20dp"/>
            <gradient
                android:centerX="0.9"
                android:centerY="0.1"
                android:startColor="@color/colorCanopyDark"
                android:endColor="@color/black_overlay"
                />
        </shape>
    </item>
</selector>