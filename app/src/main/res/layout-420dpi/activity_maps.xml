<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.idbcgroup.canopyverde.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme">

        <!--ImageButton
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_menu_mapmode"
            android:onClick="backToMap"
            android:layout_alignTop="@+id/logo"
            android:layout_alignParentStart="true" /-->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logo_blanco" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/userProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/profile"
        android:onClick="profileView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/currentLocation" />

    <RelativeLayout
        android:id="@+id/stats"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/stat_bar"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/toolbar"
        android:visibility="invisible"
        android:layout_centerHorizontal="true">

        <com.jjoe64.graphview.GraphView
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            android:id="@+id/chart"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/greenIndex"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ratio"
            android:layout_alignBottom="@+id/ratio"
            android:layout_centerHorizontal="true"
            android:text="@string/green_index" />

        <TextView
            android:id="@+id/ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratio"
            android:elevation="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/locator"
        android:layout_width="33dp"
        android:layout_height="45dp"
        android:background="@drawable/locator"
        android:layout_above="@+id/currentLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="173dp" />

    <ImageButton
        android:id="@+id/currentLocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/crosseye"
        android:onClick="currentLocation"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/locationBar"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/bar"
        android:id="@+id/locationBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/pointRegister"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/btn_locate"
            android:onClick="cameraView"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>
