<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbcgroup.canopyverde.PasswordRestoreActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/logo_gris"
        android:layout_alignStart="@+id/email"
        android:layout_marginStart="19dp"
        android:layout_alignEnd="@+id/email" />

    <ProgressBar
        android:id="@+id/load"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:translationZ="2dp"
        android:layout_marginTop="44dp"
        android:layout_alignTop="@+id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:padding="22dp"
        android:background="@drawable/inner_field"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/recover"
        android:text="@string/send"
        android:onClick="newPassword"
        android:background="@drawable/btn_ppal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="5dp"
        android:textColor="@android:color/white"
        android:paddingRight="5dp"
        android:textAllCaps="false"
        android:layout_marginTop="86dp"
        android:textSize="18sp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignEnd="@+id/email" />

</RelativeLayout>
